// Base styles for a Bespoke presentation

*, ::before, ::after
  box-sizing inherit

html
  box-sizing border-box
  
body {
  font: 12px Helvetica, Arial, sans-serif
  background-image url('../images/images.jpg')

}

.left
  text-align justify
  width 100%
  float center
  margin-left 10px

.potrait
  width 250px
  height 180px
  margin 5px
  float left

.bespoke-parent, .bespoke-scale-parent
  position absolute
  top 0
  right 0
  bottom 0
  left 0

.bespoke-scale-parent, .bespoke-slide
  pointer-events none

.bespoke-slide
  // NOTE force opacity to start at 0 to avoid transition on load when using 
  color #FFF
  background rgba(249,222,12,0.1)
  width 100%
  margin-left -(@width / 2)
  height 100%
  margin-top -(@height / 4.2)
  display block



.bespoke-active
  pointer-events auto
  opacity 1
  // NOTE Webkit requires z-index to be 1 for elements to receive focus (may no longer apply)
  z-index 1

.bespoke-inactive
  transition-delay 0

.emphatic
  background-color #222

.emphatic-text
  color #fff

aside[role=note], aside[role=notes]
  display none
